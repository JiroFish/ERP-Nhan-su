<head>
    <title>Danh sách lương</title>
    <link rel="stylesheet" href="css/timkiem.css">
    <link rel="icon" type="icon" href="icon/logo.png">
    <%- include('sliderbar.ejs') %>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Sign up</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
</head>

<body>
    <style>
        th {
            text-align: center;
        }
    </style>
    <div class="sinhvien">
        <h1>Quản Lý Lương</h1>
        <form method="GET" action="">
            <input class="tk" type="submit" value="Tìm kiếm">
            <input class="Timkiem" type="text" name="search" value=""
                placeholder="Nhập mã bảng lương hoặc tên nhân viên">
        </form>
        <a href="Themluong.ejs">Thêm dữ liệu</a>
        <table border="1">
            <thead>
                <tr>
                    <th class="col-2">Mã bảng lương</th>
                    <th class="col-2">Mã nhân viên</th>
                    <th class="col-1">Tháng</th>
                    <th class="col-2">Lương thưởng</th>
                    <th class="col-2">Mã khấu trừ</th>
                    <th class="col-3">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <div>
                    <% listLuongBong.forEach(function(item,index){%>
                        <div>
                            <tr>
                                <td>
                                    <%= JSON.stringify(item.maBangLuong)%>
                                </td>
                                <td>
                                    <%= JSON.stringify(item.maNhanVien)%>
                                </td>
                                <td>
                                    <%= JSON.stringify(item.thang)%>
                                </td>
                                <td>
                                    <%= JSON.stringify(item.luongThuong)%>
                                </td>
                                <td>
                                    <%= JSON.stringify(item.maKhauTru)%>
                                </td>
                                <td>
                                    <button type="submit" class="btn btn-warning">Sửa</button>
                                    <form method="post" style="display: inline;"
                                        action="/nhanvien/delete/<%=item.maNhanVien%>">
                                        <button type="submit" class="btn btn-danger">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        </div>
                        <% })%>
                </div>
            </tbody>
        </table>
    </div>
</body>